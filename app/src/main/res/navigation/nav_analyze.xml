<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_analyze"
    app:startDestination="@id/clickInfoFragment">

    <fragment
        android:id="@+id/clickInfoFragment"
        android:name="com.example.clicker.view.fragment.ClickInfoFragment"
        android:label="fragment_click_info"
        tools:layout="@layout/fragment_click_info" >
        <action
            android:id="@+id/action_clickInfoFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.clicker.view.fragment.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" >
        <action
            android:id="@+id/action_statisticsFragment_to_clickInfoFragment"
            app:destination="@id/clickInfoFragment" />
    </fragment>
</navigation>